// Step 2: Replace the placeholder values with your real values
{
  "AllowedHosts": "*",
  "Images": {
    "DefaultProfileImageUrl": "https://example.com/default-profile.webp",
    "DefaultProjectImageUrl": "https://example.com/default-project.webp",
    "DefaultPlaceImageUrl": "https://example.com/default-place.webp"
  },
  "BlobStorage": {
    "BaseUrl": "https://yourstorageaccount.blob.core.windows.net", // Your Azure Blob URL
    "ContainerRoot": "webimages/", // Images path
    "ContainerRootWithoutSlash": "webimages", // Images path without slash
    "ProfileImagesPath": "profile-images", // Profile images path
    "PlaceImagesPath": "places-images", // Place images path
    "ProjecteImagesPath": "project-images" // Project images path
  },
  "KeyVault": {
    "Uri": "https://yourkeyvaultname.vault.azure.net/" // Your Azure Key Vault URI
  },
  "AllowedReferers": [
    "https://yourapp.azurewebsites.net", // Replace with your app URL
    "https://localhost" // Local development
  ]
}
